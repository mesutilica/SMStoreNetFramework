@model IEnumerable<SMStore.Entities.Product>

@{
    ViewBag.Title = "Ürün Arama Sonuçları";
}

<header class="bg-dark py-5">
    <div class="container px-4 px-lg-5 my-5">
        <div class="text-center text-white">
            <h1 class="display-4 fw-bolder">Ürün Arama Sonuçları</h1>
            <p class="lead fw-normal text-white-50 mb-0">Uygun Fiyata</p>
        </div>
    </div>
</header>

<div class="container px-4 px-lg-5 mt-5">
    <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
        @foreach (var item in Model)
        {
            @Html.Partial("_PartialProduct", item)
        }
    </div>
</div>