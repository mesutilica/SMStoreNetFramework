@model SMStore.Entities.News

<div class="col-lg-4">
    <div class="card mb-4">
        <a href="/News/Detail/@Model.Id"><img class="card-img-top" src="~/Images/@Model.Image" alt="@Model.Name"></a>
        <div class="card-body">
            <div class="small text-muted">@Model.CreateDate</div>
            <h2 class="card-title h4">@Model.Name</h2>
            <p class="card-text">@Model.Description</p>
            <a class="btn btn-primary" href="/News/Detail/@Model.Id">Devamını Oku →</a>
        </div>
    </div>
</div>